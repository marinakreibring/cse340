    <%- messages() %>
</div>

            <div class="management-container">
                <h1>Vehicle Management</h1>

                <div class="management-links">
                    <a href="/inv/add-classification" class="management-link">
                        <div class="link-card">
                            <h2>Add New Classification</h2>
                            <p>Create a new vehicle classification category</p>
                        </div>
                    </a>

                    <a href="/inv/add-inventory" class="management-link">
                        <div class="link-card">
                            <h2>Add New Vehicle</h2>
                            <p>Add a new vehicle to the inventory</p>
                        </div>
                    </a>
                </div>

                <hr style="margin: 2rem 0; border: 2px solid darkslategray;">

                <h2>Manage Inventory</h2>
                <p>
                    Choose a classification from the list to see the inventory items belonging to the classification.
                </p>

                <div class="classification">
                    <%- classificationSelect %>
                </div>
                <table id="inventoryDisplay"></table>

            </div>

            <script src="/js/inventory.js"></script>