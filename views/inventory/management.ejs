<!-- flash messages (express-messages / connect-flash) -->
<div id="flash-messages">
    <%- messages() %>
</div>
<div class="management-container">
    <h1>Vehicle Management</h1>
    <div class="management-links">
        <div class="link-card">
            <a href="/inv/add-classification" class="management-link">
                <h3>Add New Classification</h3>
            </a>
            <p class="footnote">Create a new vehicle classification category</p>
        </div>
        <div class="link-card">
            <a href="/inv/add-inventory" class="management-link">
                <h3>Add New Vehicle</h3>
            </a>   
            <p class="footnote">Add a new vehicle to the inventory</p>
        </div>        
    </div>

    <hr style="margin: 2rem 0; border: 2px solid darkslategray;">

    <h2>Manage Inventory</h2>
    <p>Choose a classification from the list to see the inventory items belonging to the classification.</p>
        <div class="classification">
                <%- classificationSelect %>
        </div>
    <table id="inventoryDisplay"></table>
    <noscript>JavaScript must be enabled to use this page.</noscript>
</div>
<script src="/js/inventory.js"></script>