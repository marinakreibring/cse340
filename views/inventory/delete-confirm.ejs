<% if (title) { %>
    <h1>
        <%= title %>
    </h1>
    <% } else { res.redirect('/') } %>

        <%- messages() %>

            <% if (errors) { %>
                <ul class="notice">
                    <% errors.array().forEach(error=> { %>
                        <li>
                            <%= error.msg %>
                        </li>
                        <% }) %>
                </ul>
                <% } %>

                    <p class="footnote" style="font-weight: bold;">
                        Confirm Information! The delete is PERMANENT and cannot be undone!!!
                    </p>

                    <form class="login-box" action="/inv/delete" method="post">

                        <div class="login-form">
                            <label for="inv_make">Make:</label>
                            <input type="text" id="inv_make" name="inv_make" value="<%= locals.inv_make %>" readonly>
                        </div>

                        <div class="login-form">
                            <label for="inv_model">Model:</label>
                            <input type="text" id="inv_model" name="inv_model" value="<%= locals.inv_model %>" readonly>
                        </div>

                        <div class="login-form">
                            <label for="inv_year">Year:</label>
                            <input type="number" id="inv_year" name="inv_year" value="<%= locals.inv_year %>" readonly>
                        </div>

                        <div class="login-form">
                            <label for="inv_price">Price:</label>
                            <input type="text" id="inv_price" name="inv_price"
                                value="$<%= new Intl.NumberFormat('en-US').format(locals.inv_price) %>" readonly>
                        </div>

                        <button type="submit" class="btn-login" style="background-color: skyblue;">Delete
                            Vehicle</button>

                        <!-- Hidden input for inv_id -->
                        <input type="hidden" name="inv_id" value="<%= locals.inv_id %>">
                    </form>

                    <p class="">
                        <a href="/inv/">Cancel and Return to Management</a>
                    </p>