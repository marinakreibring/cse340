<% if (title) { %>
    <h1>
        <%= title %>
    </h1>
    <% } else { res.redirect('/') } %>

        <%- messages() %>

            <% if (errors) { %>
                <ul class="notice">
                    <% errors.array().forEach(error=> { %>
                        <li>
                            <%= error.msg %>
                        </li>
                        <% }) %>
                </ul>
                <% } %>

                    <form id="register-box" action="/inv/update" method="post">

                        <div class="login-form">
                            <label for="classificationList">Classification:</label>
                            <%- classificationSelect %>
                        </div>

                        <div class="login-form">
                            <label for="inv_make">Make:</label>
                            <input type="text" id="inv_make" name="inv_make" value="<%= locals.inv_make %>" required>
                        </div>

                        <div class="login-form">
                            <label for="inv_model">Model:</label>
                            <input type="text" id="inv_model" name="inv_model" value="<%= locals.inv_model %>" required>
                        </div>

                        <div class="login-form">
                            <label for="inv_year">Year:</label>
                            <input type="number" id="inv_year" name="inv_year" value="<%= locals.inv_year %>" min="1900"
                                max="2100" required>
                        </div>

                        <div class="login-form">
                            <label for="inv_description">Description:</label>
                            <textarea id="inv_description" name="inv_description" rows="4"
                                required><%= locals.inv_description %></textarea>
                        </div>

                        <div class="login-form">
                            <label for="inv_image">Image Path:</label>
                            <input type="text" id="inv_image" name="inv_image" value="<%= locals.inv_image %>" required>
                            <p class="form-note">Use /images/vehicles/no-image.png if no image available</p>
                        </div>

                        <div class="login-form">
                            <label for="inv_thumbnail">Thumbnail Path:</label>
                            <input type="text" id="inv_thumbnail" name="inv_thumbnail"
                                value="<%= locals.inv_thumbnail %>" required>
                            <p class="form-note">Use /images/vehicles/no-image-tn.png if no image available</p>
                        </div>

                        <div class="login-form">
                            <label for="inv_price">Price:</label>
                            <input type="number" id="inv_price" name="inv_price" value="<%= locals.inv_price %>" min="0"
                                step="0.01" required>
                        </div>

                        <div class="login-form">
                            <label for="inv_miles">Miles:</label>
                            <input type="number" id="inv_miles" name="inv_miles" value="<%= locals.inv_miles %>" min="0"
                                required>
                        </div>

                        <div class="login-form">
                            <label for="inv_color">Color:</label>
                            <input type="text" id="inv_color" name="inv_color" value="<%= locals.inv_color %>" required>
                        </div>

                        <button type="submit" class="btn-login" disabled>Update Vehicle</button>

                        <!-- Hidden input for inv_id -->
                        <input type="hidden" name="inv_id" <% if(locals.inv_id) { %> value="<%= locals.inv_id %>"
                            <% } %>>
                    </form>

                    <p class="back-link">
                        <a href="/inv/">Back to Management</a>
                    </p>

                    <script src="/js/edit-inv.js"></script>