<!-- week 4 activity -->
<%- (typeof messages === 'function') ? messages() : '' %>

<% if (typeof errors !== 'undefined' && errors && typeof errors.array === 'function') { %>
  <ul class="notice">
    <% errors.array().forEach(error => { %>
      <li><%= error.msg %></li>
    <% }) %>
  </ul>
<% } %>
<div class="login-box">
    <form action="/account/login" method="POST" class="login-form">
        <label for="account_email">Email:</label>
        <input id="account_email" name="account_email" type="email" required>

        <label for="account_password">Password:</label>
        <input id="account_password" name="account_password" type="password" required>

        <button type="submit" class="btn-login">LOGIN</button>
    </form>

    <div class="no-account">
        <p>No account? <a href="/account/register">Sign-up</a></p>
    </div>
</div>
<script src="/public/js/script.js"></script>

