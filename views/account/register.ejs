<!-- register form -->
<!-- week 4 activity -->
<% if (title) { %>
    <h1>
        <%= title %>
    </h1>
    <% } else { res.redirect('/') } %>

        <%- messages() %>

            <% if (errors) { %>
                <ul class="notice">
                    <% errors.array().forEach(error=> { %>
                        <li>
                            <%= error.msg %>
                        </li>
                        <% }) %>
                </ul>
                <% } %>
<div class="register-box">    
    <p>All fields are required.</p>
    <form action="/account/register" method="POST" class="login-form">
        <label for="account_firstname">First name:</label>
        <input id="account_firstname" name="account_firstname" type="text" value="<%= locals.account_firstname %>" required>

        <label for="account_lastname">Last name:</label>
        <input id="account_lastname" name="account_lastname" type="text" value="<%= locals.account_lastname %>" required>
        
        <label for="account_email">Email:</label>
        <input id="account_email" name="account_email" type="email" value="<%= locals.account_email %>" required>

        <label for="account_password">Password:</label>
        <input id="account_password" name="account_password" type="password" pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$" required>
        <p class="footnote">Passwords must be minimum of 12 characters and include 1 capital letter, 1 number and 1 special character.</p>
        <span id="pswdBtn">Show password</span>

        <button type="submit" class="btn-login">REGISTER</button>
    </form>    
</div>
<script src="/js/script.js"></script>

